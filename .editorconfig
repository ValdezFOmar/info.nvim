root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
indent_size = 4
max_line_length = 100
# See: https://github.com/CppCXY/EmmyLuaCodeStyle/blob/master/README_EN.md
quote_style = single
align_array_table = false
trailing_table_separator = smart
align_continuous_inline_comment = false
